<UserControl x:Class="NombramientoPartidos.View.Arbitros"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NombramientoPartidos.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
    </UserControl.Resources>
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="AgregarAbritroButton" Content="Agregar un Árbitro" Click="AgregarArbitroButton_Click"></Button>
        <Button x:Name="ModificarArbitroButton" Content="Modificar Datos de un Árbitro" Click="ModificarArbitroButton_Click"></Button>
        <Button x:Name="EliminarArbitroButton" Content="Eliminar un Árbitro" Click="EliminarArbitroButton_Click"></Button>
    </StackPanel>
</UserControl>
